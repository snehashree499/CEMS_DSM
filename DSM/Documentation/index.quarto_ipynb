        "import matplotlib.pyplot as plt\n",
        "import numpy as np\n",
        "eruptions = [1492, 1585, 1646, 1677, 1712, 1949, 1971, 2021]"
      ],
      "id": "fb47a364",
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "metadata": {},
      "source": [
        "#| label: fig-timeline\n",
        "#| fig-cap: Timeline of recent earthquakes on La Palma\n",
